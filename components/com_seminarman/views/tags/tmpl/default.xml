<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_SEMINARMAN_TAGS">
		<message>
			<![CDATA[COM_SEMINARMAN_TAGS_TIP]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_seminarman/models/fields">

			<field name="id" type="qftag"
				label="COM_SEMINARMAN_SELECT_TAG"
				required="true"
				description="COM_SELECT_SELECT_TAG_DESC"
			/>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset name="basic">
			<field name="show_gross_price" type="radio" default="0" label="COM_SEMINARMAN_SHOW_GROSS_PRICE" description="COM_SEMINARMAN_SHOW_GROSS_PRICE_DESC">
				<option value="0">COM_SEMINARMAN_NET</option>
				<option value="1">COM_SEMINARMAN_GROSS</option>
				<option value="2">COM_SEMINARMAN_HIDE_TAX</option>
			</field>
			<field name="enable_dates" type="radio" default="1" label="COM_SEMINARMAN_DATES_ENABLE" description="COM_SEMINARMAN_DATES_ENABLE_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="enable_archive" type="radio" default="-1" label="COM_SEMINARMAN_ARCHIVE_ENABLE" description="COM_SEMINARMAN_ARCHIVE_ENABLE_DESC">
			    <option value="-1">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
  		</fieldset>
	</fields>
</metadata>