<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_SEMINARMAN_COURSE">
		<message>
			<![CDATA[COM_SEMINARMAN_COURSE_TIP]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"			addfieldpath="/administrator/components/com_seminarman/models/fields">

			<field name="id" type="course"
				label="COM_SEMINARMAN_SELECT_COURSE"
				required="true"
				description="COM_SEMINARMAN_SELECT_COURSE_DESC"
			/>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset name="basic">
			<field name="show_gross_price" type="radio" default="0" label="COM_SEMINARMAN_SHOW_GROSS_PRICE" description="COM_SEMINARMAN_SHOW_GROSS_PRICE_DESC">
				<option value="0">COM_SEMINARMAN_NET</option>
				<option value="1">COM_SEMINARMAN_GROSS</option>
			</field>
  		</fieldset>
	</fields>
</metadata>